@page
@model _253501_mammadov.Admin.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Fruit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="fruit.Id" />
            <div class="form-group">
                <label asp-for="fruit.Name" class="control-label"></label>
                <input asp-for="fruit.Name" class="form-control" />
                <span asp-validation-for="fruit.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fruit.Description" class="control-label"></label>
                <input asp-for="fruit.Description" class="form-control" />
                <span asp-validation-for="fruit.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fruit.Price" class="control-label"></label>
                <input asp-for="fruit.Price" class="form-control" />
                <span asp-validation-for="fruit.Price" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none">
                <label asp-for="fruit.Image" class="control-label"></label>
                <input asp-for="fruit.Image" class="form-control" />
                <span asp-validation-for="fruit.Image" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none">
                <label asp-for="fruit.ImageMimeType" class="control-label"></label>
                <input asp-for="fruit.ImageMimeType" class="form-control" />
                <span asp-validation-for="fruit.ImageMimeType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Image" class="control-label">Upload Image</label>
                <input asp-for="Image" type="file" class="form-control-file" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fruit.CategoryId" class="control-label"></label>
                <select asp-for="fruit.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="fruit.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
