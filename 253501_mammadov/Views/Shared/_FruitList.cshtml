@model ListModel<mammadov.Domain.Entities.Fruit>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var fruit in Model.Items)
    {
        <div class="col-10">
            <div class="card h-100">
                <img src="@fruit.Image" class="card-img-top" alt="@fruit.Name" style="object-fit: cover; height: 200px;">
                <div class="card-body">
                    <h5 class="card-title">@fruit.Name</h5>
                    <p class="card-text">@fruit.Description</p>
                </div>
                <div class="card-footer">
                    <form asp-controller="Cart" asp-action="Add" asp-route-id="@fruit.Id" asp-route-returnurl="@Context.Request.Path" method="post">                
                        <button type="submit" class="btn btn-primary">Добавить в корзину</button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

<pager current-page="@Model.CurrentPage"
       total-pages="@Model.TotalPages"
       category="@Context.Request.Query["category"].ToString()"></pager>
